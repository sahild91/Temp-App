<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TruFurrs" parent="Theme.Material3.DayNight">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/secondary_mustard_gold</item>
        <item name="colorOnPrimaryContainer">@color/primary_charcoal_gray</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_mustard_gold</item>
        <item name="colorOnSecondary">@color/primary_charcoal_gray</item>
        <item name="colorSecondaryContainer">@color/accent_gold</item>
        <item name="colorOnSecondaryContainer">@color/primary_charcoal_gray</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/background_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Accent Colors -->
        <item name="colorTertiary">@color/accent_gold</item>
        <item name="colorOnTertiary">@color/primary_charcoal_gray</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark_green</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TruFurrs.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TruFurrs.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TruFurrs.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TruFurrs.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TruFurrs.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TruFurrs.Caption</item>
    </style>
</resources>