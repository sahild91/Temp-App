<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography - Headers (Bold Poppins/Montserrat) -->
    <style name="TextAppearance.TruFurrs.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.TruFurrs.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.TruFurrs.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Typography - Body (Regular Poppins/Inter) -->
    <style name="TextAppearance.TruFurrs.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.TruFurrs.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Typography - Caption/Subtext (Light Italic) -->
    <style name="TextAppearance.TruFurrs.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_light_italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Brand Title -->
    <style name="TextAppearance.TruFurrs.BrandTitle" parent="TextAppearance.TruFurrs.Headline1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/primary_dark_green</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <!-- Button Text -->
    <style name="TextAppearance.TruFurrs.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Tab Text -->
    <style name="TextAppearance.TruFurrs.Tab" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>